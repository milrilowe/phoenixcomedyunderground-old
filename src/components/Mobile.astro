---
import { EmailForm } from "./EmailForm";
---

<main
    class="md:hidden min-h-screen relative bg-gradient-to-br from-amber-50 via-yellow-50 to-orange-100"
>
    <div
        class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_50%_50%,rgba(0,0,0,0.1)_1px,transparent_1px)] bg-[length:15px_15px]"
    >
    </div>

    <div class="relative z-10">
        <div class="h-screen flex flex-col">
            <!-- Title -->
            <div class="text-center pt-6 pb-4 px-4">
                <h1
                    class="text-2xl font-black text-zinc-900 leading-none tracking-tight mb-2"
                >
                    Phoenix
                </h1>
                <p
                    class="text-sm text-zinc-700 font-medium uppercase tracking-wider"
                >
                    Underground Comedy
                </p>
            </div>

            <!-- Flyer with CTA -->
            <div
                class="flex-1 flex items-center justify-center px-4 pb-20 relative"
            >
                <div class="relative max-w-sm w-full">
                    <div
                        class="absolute inset-0 translate-x-3 translate-y-3 bg-black/20 rounded-lg blur-sm"
                    >
                    </div>
                    <div class="relative">
                        <img
                            src="/vu-flyer.png"
                            alt="Phoenix Comedy Underground: Best of Showcase - June 25"
                            class="w-full h-auto object-contain rounded-lg shadow-xl"
                        />
                    </div>
                    <div
                        class="absolute -top-2 left-8 w-10 h-5 bg-yellow-200/60 rotate-12 rounded-sm shadow-md border border-yellow-300/40"
                    >
                    </div>
                    <div
                        class="absolute -bottom-2 right-12 w-12 h-6 bg-yellow-200/60 -rotate-6 rounded-sm shadow-md border border-yellow-300/40"
                    >
                    </div>

                    <!-- Floating ticket button -->
                    <div class="absolute -bottom-4 -right-4">
                        <a
                            href="https://www.eventbrite.com/e/phoenix-comedy-underground-best-of-phoenix-showcase-tickets-1380218563879"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="bg-zinc-900 text-yellow-400 hover:bg-zinc-800 font-bold text-lg px-6 py-3 rounded-none border-4 border-zinc-900 hover:border-zinc-700 shadow-2xl transform hover:scale-105 transition-all duration-200 uppercase tracking-wide inline-block"
                        >
                            Get Tickets
                        </a>
                    </div>

                    <!-- 21+ disclaimer -->
                    <div class="absolute -bottom-6 left-4">
                        <p
                            class="text-zinc-600 text-xs font-medium uppercase tracking-wide bg-amber-50/90 px-2 py-1 rounded border border-zinc-300"
                        >
                            21+ Event
                        </p>
                    </div>
                </div>

                <!-- Scroll indicator -->
                <div
                    class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-center"
                >
                    <div class="animate-bounce">
                        <svg
                            class="w-6 h-6 text-zinc-600 mb-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width={2}
                                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </div>
                    <p class="text-zinc-600 text-xs uppercase tracking-wide">
                        More
                    </p>
                </div>
            </div>
        </div>

        <!-- Email form section - only this needs React -->
        <div
            class="border-t-4 border-zinc-900 bg-zinc-900 text-yellow-400 py-6"
        >
            <div class="px-4">
                <div class="text-center space-y-4 max-w-md mx-auto">
                    <h3 class="text-xl font-bold uppercase tracking-wider">
                        Stay in the Loop
                    </h3>
                    <EmailForm client:load />
                    <div
                        class="flex flex-col items-center gap-3 pt-4 border-t border-yellow-400/20"
                    >
                        <a
                            href="https://instagram.com/phoenixcomedyunderground"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-2 text-yellow-400 hover:text-yellow-300 transition-colors font-medium"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path>
                            </svg>
                            @phoenixcomedyunderground
                        </a>
                        <a
                            href="mailto:contact@phoenixcomedyunderground.com"
                            class="text-yellow-400/80 hover:text-yellow-300 underline text-sm"
                        >
                            contact@phoenixcomedyunderground.com
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
