---
// src/layouts/Layout.astro
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-black">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Phoenix Comedy Underground - Where comedy gets real" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-gray-100 font-['Inter'] overflow-x-hidden">
    <!-- CSS Noise overlay -->
    <div class="fixed inset-0 opacity-10 z-0 pointer-events-none" 
         style="background-image: url('data:image/svg+xml,%3Csvg viewBox=&quot;0 0 100 100&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cfilter id=&quot;noiseFilter&quot;%3E%3CfeTurbulence type=&quot;fractalNoise&quot; baseFrequency=&quot;0.85&quot; numOctaves=&quot;2&quot; stitchTiles=&quot;stitch&quot;/%3E%3C/filter%3E%3Crect width=&quot;100%25&quot; height=&quot;100%25&quot; filter=&quot;url(%23noiseFilter)&quot; opacity=&quot;0.3&quot;/%3E%3C/svg%3E'); mix-blend-mode: overlay;">
    </div>
    
    <!-- Top Navigation -->
    <nav class="relative z-20 flex justify-center items-center py-6 px-8">
      <div class="flex items-center gap-8">
        <a href="/events" class="text-gray-100 hover:text-red-400 transition-colors duration-300 uppercase tracking-wider text-sm">
          Events
        </a>
        <span class="text-gray-500">|</span>
        <a href="/contact" class="text-gray-100 hover:text-red-400 transition-colors duration-300 uppercase tracking-wider text-sm">
          Contact
        </a>
        <span class="text-gray-500">|</span>
        <a href="/#mailing-list" class="bg-red-400 text-black px-4 py-2 text-sm font-semibold hover:bg-red-300 transition-all duration-300 uppercase tracking-wider">
          Join Mailing List
        </a>
      </div>
    </nav>
    
    <slot />
  </body>
</html>