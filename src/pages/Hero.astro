// src/components/Hero.astro
---

<main class="relative min-h-screen flex flex-col bg-gradient-to-br from-black/90 to-gray-900/80 overflow-hidden" style="min-height: calc(100vh - 84px);">
  
  <!-- Top section with logo -->
  <div class="flex-1 flex flex-col justify-center items-center text-center px-4 pt-8">
    <h1 class="font-['Bebas_Neue'] text-5xl sm:text-7xl lg:text-9xl font-normal leading-[0.85] tracking-wider uppercase mb-6 drop-shadow-lg">
      Phoenix
      Comedy<br>
      Underground
    </h1>
    
    <p class="text-lg sm:text-xl opacity-80 italic tracking-wider mb-8">
      As above, so below
    </p>
  </div>

  <!-- Middle section with show card -->
  <div class="flex justify-center px-4 mb-8">
    <a href="https://example.com" 
       target="_blank"
       class="flex flex-col cols-1 items-center max-w-md p-6 px-12 border border-gray-100/20 bg-black/30 backdrop-blur-sm hover:border-red-400/50 hover:bg-black/50 transition-all duration-300 group">
      <div class="font-['Bebas_Neue'] text-2xl sm:text-3xl mb-2 text-red-400 group-hover:text-red-300">
        Jun 15, 2025
      </div>
      <div class="text-lg mb-2 opacity-90 group-hover:opacity-100">
        Cornish Pasty Co.
      </div>
      <div class="text-sm opacity-70 italic mb-1 group-hover:opacity-80">
        951 W Monroe St, Phoenix, AZ
      </div>
      <div class="text-sm opacity-70 italic group-hover:opacity-80">
        Doors 7:30 â€¢ Show 8:00
      </div>
    </a>
  </div>
  
  <!-- Bottom section with signup and socials -->
  <div class="pb-12 px-4">
    <div class="max-w-md mx-auto">
      <form id="mailing-list" class="flex flex-col sm:flex-row gap-3 mb-8">
        <input 
          type="email" 
          placeholder="your@email.com" 
          class="flex-1 bg-transparent border border-gray-100/30 text-gray-100 px-4 py-3 text-base placeholder:text-gray-100/50 focus:border-red-400/50 transition-colors duration-300"
          required
        />
        <button 
          type="submit" 
          class="bg-red-400 text-black px-6 py-3 font-semibold hover:bg-red-300 transition-all duration-300 uppercase tracking-wider cursor-pointer focus:outline-none focus:ring-2 focus:ring-red-400/50 focus:ring-offset-2">
          Join
        </button>
      </form>

      <div class="text-center opacity-60">
        <a href="https://instagram.com/phoenixcomedyunderground" 
           target="_blank"
           class="inline-flex items-center gap-2 text-gray-100 hover:text-red-400 transition-colors duration-300 text-sm tracking-wider">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
